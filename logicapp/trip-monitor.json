        "contentVersion": "1.0.0.0",
        "triggers": {
            "When_events_are_available_in_Event_Hub": {
                "type": "ApiConnection",
                "inputs": {
                    "host": {
                        "connection": {
                            "name": "@parameters('$connections')['eventhubs']['connectionId']"
                        }
                    },
                    "method": "get",
                    "path": "/@{encodeURIComponent('eh-cst8917-trips')}/events/batch/head",
                    "queries": {
                        "contentType": "application/json",
                        "consumerGroupName": "$Default",
                        "maximumEventsCount": 50
                    }
                },
                "recurrence": {
                    "frequency": "Minute",
                    "interval": 3
                },
                "splitOn": "@triggerBody()"
            }
        },
        "actions": {
            "HTTP": {
                "type": "Http",
                "inputs": {
                    "uri": "https://fa-cst8917-lab4-gjh3b7bhe2hrf6bd.canadacentral-01.azurewebsites.net/api/analyze_trip",
                    "method": "POST",
                    "headers": {
                        "Content-Type": "application/json"
                    },
                    "queries": {
                        "code": "Pu7f9joheRvNAAEaK9B9qhwthgocN3-qemI9El....."
                    },
                    "body": "@triggerBody()?['ContentData']\r\n"
                },
                "runAfter": {},
                "runtimeConfiguration": {
                    "contentTransfer": {
                        "transferMode": "Chunked"
                    }
                }
            },
            "For_each": {
                "type": "Foreach",
                "foreach": "@body('HTTP')",
                "actions": {
                    "Condition": {
                        "type": "If",
                        "expression": {
                            "and": [
                                {
                                    "equals": [
                                        "@equals(item()?['isInteresting'], true)",
                                        true
                                    ]
                                }
                            ]
                        },
                        "actions": {
                            "Condition_1": {
                                "type": "If",
                                "expression": {
                                    "and": [
                                        {
                                            "equals": [
                                                "@contains(item()?['insights'], 'SuspiciousVendorActivity')",
                                                true
                                            ]
                                        }
                                    ]
                                },
                                "actions": {
                                    "Post_card_in_a_chat_or_channel": {
