                                        "inputs": {
                                            "host": {
                                                "connection": {
                                                    "name": "@parameters('$connections')['teams']['connectionId']"
                                                }
                                            },
                                            "method": "post",
                                            "body": {
                                                "recipient": {
                                                    "groupId": "b984c961-c6e1-47d6-880e-f74d7ff72144",
                                                    "channelId": "19:iEvvdomln_ZVr5HoI74dGeS5kMgbyROTThnAYOaGTM01@thread.tacv2"
                                                },
                                                "messageBody": "{\n  \"type\": \"AdaptiveCard\",\n  \"body\": [\n    { \"type\": \"TextBlock\",\"text\": \"‚ö†Ô∏è Suspicious Vendor Activity Detected\",\"weight\":\"Bolder\",\"size\":\"Large\",\"color\":\"Attention\" },\n    { \"type\": \"FactSet\",\"facts\": [\n        { \"title\": \"Vendor\", \"value\": \"@{item()?['vendorID']}\" },\n        { \"title\": \"Distance (mi)\", \"value\": \"@{item()?['tripDistance']}\" },\n        { \"title\": \"Passengers\", \"value\": \"@{item()?['passengerCount']}\" },\n        { \"title\": \"Payment\", \"value\": \"@{item()?['paymentType']}\" },\n        { \"title\": \"Insights\", \"value\": \"@{join(item()?['insights'], ', ')}\" }\n    ]}\n  ],\n  \"actions\": [],\n  \"version\": \"1.2\"\n}\n"
                                            },
                                            "path": "/v1.0/teams/conversation/adaptivecard/poster/Flow bot/location/@{encodeURIComponent('Channel')}"
                                        }
                                    }
                                },
                                "else": {
                                    "actions": {
                                        "Post_card_in_a_chat_or_channel_1": {
                                            "type": "ApiConnection",
                                            "inputs": {
                                                "host": {
                                                    "connection": {
                                                        "name": "@parameters('$connections')['teams']['connectionId']"
                                                    }
                                                },
                                                "method": "post",
                                                "body": {
                                                    "recipient": {
                                                        "groupId": "b984c961-c6e1-47d6-880e-f74d7ff72144",
                                                        "channelId": "19:iEvvdomln_ZVr5HoI74dGeS5kMgbyROTThnAYOaGTM01@thread.tacv2"
